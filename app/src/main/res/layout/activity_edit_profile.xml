<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.activity.EditProfileActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_backEditProfile"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@color/transparent"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/background_whte_top_curve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_userProfilePicture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_70dp">

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/phone_number"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etCollageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/university_collage"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/course"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/your_skills_seperated_by"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@drawable/edit_text_background"
                android:cursorVisible="true"
                android:hint="@string/about_you"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="10"
                android:paddingStart="@dimen/_10dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingBottom="@dimen/_8dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:textCursorDrawable="@drawable/edite_text_cursor"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_addCertifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:text="@string/add_certification"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnAddProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:text="@string/add_project"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSaveInfoEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:text="@string/save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_userProfilePicture"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_margin="@dimen/_20dp"
        android:background="@color/light_grey"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_backEditProfile"
        app:shapeAppearanceOverlay="@style/CircleImageShape" />
</androidx.constraintlayout.widget.ConstraintLayout>